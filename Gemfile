source "https://rubygems.org"

group :jekyll_plugins do
  gem "jekyll", "~> 4.2.0"                      # ✅ Good version
  gem "jekyll-scholar"                          # ✅ Needed for cite
  gem "jekyll-feed", "~> 0.6"                   # ✅ RSS feed support
  gem "jekyll-sitemap"                          # ✅ For SEO and indexing
  gem "jekyll-paginate"                         # ✅ Pagination
  gem "jekyll-github-metadata"                  # ✅ GitHub Pages integration
  gem "jekyll-twitter-plugin"                   # ✅ Twitter embeds
  gem "jekyll-email-protect"                    # ✅ Obfuscate email links
  gem "jemoji"                                  # ✅ GitHub-style emoji
  gem "unicode_utils"                           # ✅ For unicode operations
  gem "webrick"                                 # ✅ Required for `jekyll serve` in Ruby 3.x
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]

gem "kramdown-parser-gfm"
